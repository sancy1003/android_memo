<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/gradient"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="체크리스트"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="25sp"/>

        <ImageButton
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:tint="#ffffff"
            android:src="@drawable/ic_delete_black_24dp"
            android:background="#00FFFFFF"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:backgroundTint="@color/realWhite"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:backgroundTint="@color/realWhite"
                android:id="@+id/ll_memo_form"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ListView
                    android:id="@+id/lv_checkList"
                    android:background="@color/realWhite"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:numColumns="2"
                    android:clickable="true"
                    android:longClickable="true"/>

            </LinearLayout>

            <ImageButton
                android:id="@+id/btn_checkList_write"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/roundbtn"
                android:tint="@color/realWhite"
                android:scaleType="fitXY"
                android:padding="20dp"
                android:outlineAmbientShadowColor="@color/realBlack"
                android:src="@drawable/ic_add_black_24dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="22dp"
                android:layout_marginBottom="22dp">

            </ImageButton>


        </RelativeLayout>

    </LinearLayout>

</LinearLayout>